%h1 Listing communities

%table
  %thead
    %tr
      %th{ :colspan => 3 }
  
  %tbody
    - for community in @communities
      %tr{ :class => cycle(:odd, :even) }
        %td= community.name
        %td= link_to 'Edit', edit_admin_community_path(community)
        %td= link_to 'Destroy', admin_community_path(community), :confirm => 'Are you sure?', :method => :delete

%br
= link_to 'New community', new_admin_community_path
