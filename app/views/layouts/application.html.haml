!!! Strict
%html
  %head
    %meta{ "http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }
    %title Ecovillages and Cohousing in New Zealand
    = include_stylesheets :app
    = include_javascripts :app
    = yield :head
  %body
    #header
      .wrap1
        .fixed
          .fixed_inner
            %h1 Eco-Village and Cohousing Association of New Zealand
          %ul.tabs
            = tab_link "Village List", root_path
            = tab_link "About", about_path(:action => 'ecovillages')
    %hr.tab_bar
    - hero = yield :hero
    - unless hero.blank?
      #hero
        .wrap1
          .wrap2
            .wrap3
              .fixed
                .fixed_inner
                  = hero
    #body
      .wrap1
        .fixed
          .fixed_inner
            = yield
